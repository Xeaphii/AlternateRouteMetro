<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/train_name"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="Train Name"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/station_name1"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:text="Station Name 1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departure_time"
            android:textSize="19dp"
            android:textColor="#3F51B5"
            android:layout_alignParentRight="true"
            android:text="13:30(Dep)"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:id="@+id/station_name2"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:text="Station Name 2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/arrival_time"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="#3F51B5"
            android:layout_alignParentRight="true"
            android:text="06:50(Arr)"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:text="Travel time"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/travel_time"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="#3F51B5"
            android:layout_alignParentRight="true"
            android:text="17:20"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:text="Runs on"
            />

        <TextView
            android:id="@+id/runs_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#3F51B5"
            android:layout_alignParentRight="true"
            android:text="Mon Tue Wed Thurs Fri"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:text="Classes"
            />

        <TextView
            android:id="@+id/classes_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"

            android:textColor="#3F51B5"
            android:layout_alignParentRight="true"
            android:text="2A 3A SL"
            />
    </LinearLayout>

</LinearLayout>