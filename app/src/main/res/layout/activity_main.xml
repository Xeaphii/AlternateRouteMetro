<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="40dp"
    android:layout_height="match_parent">



    <LinearLayout

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical"
        >
       <LinearLayout
           android:layout_width="fill_parent"
            android:orientation="horizontal"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"

               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:textSize="16dp"
               android:layout_alignParentLeft="true"
               android:text="Train no:"
               android:textColor="#3F51B5"
               />
           <EditText
               android:id="@+id/train_number"
               android:layout_width="wrap_content"

               android:layout_weight="1"
               android:textColor="#3F51B5"
               android:background="@drawable/testing_gradient"
               android:padding="5dp"


               android:layout_marginLeft="40dp"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_marginLeft="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="(Optional)"
               />
       </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Source:"
                android:textColor="#3F51B5"
                />
            <AutoCompleteTextView

                android:id="@+id/source_field"
                android:background="@drawable/testing_gradient"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="#3F51B5"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentLeft="true"
                android:text="Destination:"
                android:layout_centerVertical="true"
                android:textColor="#3F51B5"
                />
            <AutoCompleteTextView
                android:id="@+id/destination_field"
                android:background="@drawable/testing_gradient"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="#3F51B5"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_marginRight="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="Date:"
                    android:textColor="#3F51B5"
                    />
               <RelativeLayout
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content">
                   <Button
                       android:layout_marginTop="10dp"
                       android:id="@+id/date_set"
                       android:layout_width="fill_parent"
                       android:text="11/30/2014"
                       android:paddingTop="10dp"
                       android:textColor="#fff"
                       android:background="@drawable/custom_button"
                       android:paddingBottom="10dp"
                       android:layout_height="wrap_content" />
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:background="@android:drawable/arrow_down_float"
                       android:layout_marginRight="5dp"
                       android:layout_alignParentRight="true"
                       />
               </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="19dp"
                    android:layout_alignParentLeft="true"
                    android:text="Class:"
                    android:textColor="#3F51B5"
                    />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/classes_set"
                        android:layout_marginTop="10dp"
                        android:layout_width="fill_parent"
                        android:text="All Classes"
                        android:paddingTop="10dp"
                        android:textColor="#fff"
                        android:background="@drawable/custom_button"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:drawable/arrow_down_float"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_submit"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:background="@drawable/custom_button"
            android:layout_marginTop="13dp"
            android:padding="13dp"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"

            android:layout_height="wrap_content"
            android:text="Get Status"
            />

    </LinearLayout>


</RelativeLayout>
